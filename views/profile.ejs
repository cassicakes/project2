<h2>Your Profile</h2>

<div class="current user"></div>

<div class="savedEvents">
	<ul><%= user.email%></ul> <!-- add delete button for each event  -->
	<% user.events.forEach(function(event) { %>
		<div class="resultsFont">
			<a href="/showDetails/<%= event.event_id %>"><%= event.name %></a>
			<form action="/delete/<%=event.event_id%>" method="POST">
				<button class="allButton">Delete</button>
			</form>
		</div>
	<% }); %>
</div>

<form action="/search" method="GET">
  <h3>Search For Events</h3>
  <legend></legend>
	<div class="search">
    <input type="text" class="form-control" id="" placeholder="zip code" name="zip">
    <input type="text" class="form-control" id="" placeholder="Topic" name="topic">
  </div>
  <button type="submit" class="allButton">Search</button>
</form>

